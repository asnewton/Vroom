 
@model vroom.Models.ViewModels.ModelViewModel
@using vroom.Extentions
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Add Model of Vehicle</h2>
<form asp-action="Create" method="post">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control">
            </select>
         </div>
        </div>
        <div class="form-group row">

        <div class="col-2">
            <label asp-for="Model.Name"></label>
        </div>
        <div class="col-4"> 
            <input type="text" asp-for="Model.Name" class="form-control" />
        </div><br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
            <a asp-action="Index" class="btn btn-success">Back</a>
        </div>
    </div>
</form>
