
@model IEnumerable<vroom.Models.Model>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Models of Vehivle</h2>
    </div>
    <div class="col-6 text-right"> 
        <a asp-action="Create" class="btn btn-info"><i class="fa fa-motorcycle"></i> &nbsp;Add new Model</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr>
                <th>
                   Make
                </th> 
                <th>
                    Name
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>item.Make.Name)</td>
                    <td>@Html.DisplayFor(m=>item.Name)</td>
                    <partial name="_TableButtonPartial" model="item.Id"/>                    
                </tr>
            }
        </table>
    </div>
</div>



