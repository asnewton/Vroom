@model IEnumerable<vroom.Models.Make>
@{
    ViewData["Title"] = "Index";
}

<br />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Makes of Vehivle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fa fa-motorcycle"></i> &nbsp;Add new Make</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </tr>

            }
        </table>
    </div>
</div>

